<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <!--위험성 도넛 chart -->

        <!--종합(심박수,자궁수축률,태동,혈당,혈압) line chart -->

        <!--수면시간 line chart -->
        <LinearLayout
            android:id="@+id/sleepLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="평균 수면시간" />
            <TextView
                android:id="@+id/sleepAvg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="50sp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/sleepchart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>


        <!--체중 chart -->
        <LinearLayout
            android:id="@+id/weightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일일 체중" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/weightchart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!--근육 chart -->
        <LinearLayout
            android:id="@+id/muscleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일일 근육량" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/musclechart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!--체지방 chart -->
        <LinearLayout
            android:id="@+id/fatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일일 체지방률" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/fatchart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>