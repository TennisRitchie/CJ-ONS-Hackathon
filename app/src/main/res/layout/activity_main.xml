<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:id="@+id/Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
<!--위험성 도넛 chart -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity ="center"
        android:text="위험 수준" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/harmnesschart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
            <!--종합(심박수,자궁수축률,태동,혈당,혈압) line chart -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity ="center"
                android:text="Monitoring" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <CheckBox
                android:id="@+id/FHR_btn"
                android:text="심박수"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/UC_btn"
                android:text="자궁수축률"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:onClick="onCheckBoxClicked"/>
            <CheckBox android:id="@+id/FM_btn"
                android:text="태동"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/glucose_btn"
                android:text="혈당"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:onClick="onCheckBoxClicked"/>

            <CheckBox android:id="@+id/pressure_btn"
                android:text="혈압"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:onClick="onCheckBoxClicked"/>

            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/monitoringchart"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


        <!--수면시간 line chart -->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="평균 수면시간" />
            <TextView
                android:id="@+id/sleepAvg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="50sp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/sleepchart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />


 <!--체성분 도넛 chart -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일일 체중" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/weightchart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />

        <!--근육 chart -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일일 근육량" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/musclechart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />


        <!--체지방 chart -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="일일 체지방률" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/fatchart"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal" />
</LinearLayout>
    </ScrollView>
</LinearLayout>